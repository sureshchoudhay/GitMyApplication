<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/myFragmentTag"
    android:background="@drawable/img5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">
        <View
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradientfile"/>
        <ImageView
            android:id="@+id/img_vw"
            android:transitionName="@string/transition_name_name"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:src="@drawable/ic_travel"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="Sign in with Mobile"
            android:layout_above="@+id/social_btn_lyt"
            android:layout_marginBottom="10dp"
            android:id="@+id/butnnext"
            android:background="@drawable/editextfile"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:id="@+id/social_btn_lyt"
            android:layout_above="@+id/terms_txt"
            android:layout_height="wrap_content">
            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"/>
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Facebook"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We never post untill you tell us to"
            android:textSize="12sp"
            android:id="@+id/terms_txt"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
</RelativeLayout>

